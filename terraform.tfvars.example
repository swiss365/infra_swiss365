# terraform.tfvars.example
# Copy to terraform.tfvars and fill in your values
# Note: Sensitive values should be set via environment variables or Terraform Cloud

# Customer identifier - used for resource naming and DNS
customer_id = "example-customer"

# Domain for Guacamole access
guacamole_domain = "example-customer.swiss365.cloud"

# SSH key name in Hetzner Cloud
ssh_key_name = "swiss365-key"

# Hetzner Cloud API Token (sensitive - use TF_VAR_hcloud_token instead)
# hcloud_token = "your-token-here"

# Optional: Override defaults
# image    = "ubuntu-24.04"
# location = "fsn1"
